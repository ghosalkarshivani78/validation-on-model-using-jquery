@model IEnumerable<MvcEnity.Models.userform>
@{
    ViewBag.Title = "Index";
}
<h2>@ViewBag.Message</h2>


<!-- Trigger the modal with a button -->
<button type="button" onclick="Create()" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">
Create</button>


@*@Html.ActionLink("Create", "Create", "user")*@
<div class="container">
<table border="1" class="table">
<tr>
<th>id</th>
<th>First Name</th>
<th>Last Name</th>
<th>Email</th>
<th>Address</th>
<th>Country</th>
<th>State</th>
<th>City</th>
<th>Number</th>
<th>Edit</th>
<th>Delete</th>
</tr>
@foreach (var i in Model)
{
    <tr>
     <td>@i.id</td>
     <td>@i.firstname</td>
     <td>@i.lastname</td>
     <td>@i.email</td>
     <td>@i.address</td>
     <td>@i.countryid</td>
      <td>@i.stateid</td>
    <td>@i.cityid</td>
    <td>@i.number</td>
    <td><button type="button" onclick="Edit('@i.id')" class="btn btn-success" data-toggle="modal" data-target="#myModal">Edit</button></td>
    <td><button class="btn btn-danger">@Html.ActionLink("Delete", "Delete", "user", new { id = i.id }, null)</button></td>
    </tr>
}

</table>
</div>




<!-- Modal -->
<div id="myModal" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Modal Header</h4>
      </div>
      <div class="modal-body">
     
      </div>
     
    </div>

  </div>
</div>


<script type="text/javascript">
    function Create() {
        debugger;
        $.ajax({
            type: "GET",
            url: "/user/Create",
            contentType: "application/json; charset=utf-8",
            data: {},
            datatype: "json",
            success: function (data) {
                debugger;
                $('#myModal .modal-body').html(data);

                $('#myModal').modal('show');

            },
            error: function () {
                alert("Dynamic content load failed.");
            }
        });
    }


    function Edit(id) {

        $.ajax({
            type: "GET",
            url: "/user/Edit",
            contentType: "application/json; charset=utf-8",
            data: {id:id},
            datatype: "json",
            success: function (data) {
                debugger;
                $('#myModal .modal-body').html(data);

                $('#myModal').modal('show');

            },
            error: function () {
                alert("Dynamic content load failed.");
            }
        });
    
     }

  


</script>